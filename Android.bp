cc_library_shared {
    name: "libamffmpeg",
    defaults: ["ffmpeg_defaults"],

    system_ext_specific: true,
    apex_available: [
        "//apex_available:platform",
        "com.amlogic.mediaextractor",
    ],
    //vendor: true,

    arch: {
        arm: {
            srcs: [
                ":arm-srcs",
            ],
            exclude_srcs: [
                ":exclude-srcs",
            ],
        },
        arm64: {
            srcs: [
                ":arm64-srcs",
            ],
            exclude_srcs: [
                ":exclude-srcs",
            ],
        },
    },

    cflags: [
        "-DAMFFMPEG",
        "-DHAVE_AV_CONFIG_H",
        "-Wno-error=return-type",
        "-Wno-missing-field-initializers",
        "-Wno-parentheses",
        "-Wno-pointer-sign",
        "-Wno-sign-compare",
        "-Wno-switch",
        "-Wno-string-plus-int",
        "-Wno-implicit-function-declaration",
        "-fPIC",
        "-DFF_API_AV_GETTIME=0"
    ],

    ldflags: [
        "-Wl",
        "-Wl,--as-needed",
        "-Wl,-Bsymbolic",
    ],

    multilib: {
        lib32: {
            cflags: ["-DARCH_ARM"],
        },
        lib64: {
            cflags: ["-DARCH_AARCH64"],
        },
    },

    include_dirs: [
        "external/zlib",
        "external/libxml2/include",
        "vendor/amlogic/common/external/ffmpeg",
    ],

    shared_libs: [
        "libutils",
        "liblog",
        "libdl",
        "libz",
        "libcutils",
        //"libssl",
        //"libcrypto",
        "libxml2"
    ],
}

