bootstrap_go_package {
    name: "ffmpeg",
    pkgPath: "android/soong/ffmpeg",
    deps: [
        "blueprint",
        "soong",
        "soong-android",
        "soong-cc",
        "soong-genrule",
        "blueprint-bootstrap",
        "soong-cc-config"
    ],
    srcs: [
        "ffmpeg.go",
    ],
    pluginFor: ["soong_build"],
}

ffmpeg_defaults {
    name: "ffmpeg_defaults",
}

package {
    default_applicable_licenses: ["amffmpeg_license"],
}

license {
    name: "amffmpeg_license",
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0",
        "SPDX-license-identifier-GPL-1.0+",
        "SPDX-license-identifier-GPL-2.0+",
        "SPDX-license-identifier-LGPL-2.0+",
        "SPDX-license-identifier-MIT",
        "SPDX-license-identifier-ISC",
        "SPDX-license-identifier-BSD",
        "SPDX-license-identifier-LGPL-2.1+",
        "legacy_proprietary",
    ],
    //license_conditions: ["notice"],
}

filegroup {
    name: "arm-srcs",
    srcs: [
        "libavfilter/*.c",
        "libavfilter/dnn/*.c",
        "libswscale/*.c",
        "libswscale/arm/*.c",
        "libswscale/arm/*.S",
        "compat/strtod.c",
        "libavutil/*.c",
        "libavutil/arm/*.c",
        "libavutil/arm/*.S",
        "libavformat/*.c",
        "libavcodec/*.c",
        "libavcodec/arm/*.c",
        "libavcodec/arm/*.S",
        "libswresample/*.c",
        "libswresample/arm/*.c",
        "libswresample/arm/*.S",
        "libavcodec/neon/mpegvideo.c",
    ],
}

filegroup {
    name: "arm64-srcs",
    srcs: [
        "libavfilter/aarch64/*.S",
        "libavfilter/aarch64/*.c",
        "libavfilter/*.c",
        "libavfilter/dnn/*.c",
        "libswscale/aarch64/*.S",
        "libswscale/aarch64/*.c",
        "libswscale/*.c",
        "compat/strtod.c",
        "libavutil/*.c",
        "libavutil/aarch64/*.c",
        "libavutil/aarch64/*.S",
        "libavformat/*.c",
        "libavcodec/*.c",
        "libavcodec/aarch64/*.c",
        "libavcodec/aarch64/*.S",
        "libswresample/*.c",
        "libswresample/aarch64/*.c",
        "libswresample/aarch64/*.S",
        "libavcodec/neon/mpegvideo.c",
    ],
}

